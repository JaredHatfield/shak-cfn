{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "AWS CloudFormation for Shak resources.",
  "Parameters": {
    "ShakQueueName": {
      "Description": "Name of the Shak queue",
      "Type": "String",
      "Default": "shak-queue"
    },
    "ShakTopicName": {
      "Description": "Name of the Shak topic",
      "Type": "String",
      "Default": "shak-topic"
    }
  },
  "Mappings": {},
  "Resources": {
    "ShakTopic": {
      "Type": "AWS::SNS::Topic",
      "Properties": {
        "TopicName": {
          "Ref": "ShakTopicName"
        },
        "Subscription": [
          {
            "Endpoint": {
              "Fn::GetAtt": [
                "ShakQueue",
                "Arn"
              ]
            },
            "Protocol": "sqs"
          }
        ]
      }
    },
    "ShakQueue": {
      "Type": "AWS::SQS::Queue",
      "Properties": {
        "QueueName": {
          "Ref": "ShakQueueName"
        }
      }
    },
    "ShakQueuePolicy": {
      "Type": "AWS::SQS::QueuePolicy",
      "Properties": {
        "Queues": [
          {
            "Ref": "ShakQueue"
          }
        ],
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Id": "ShakQueuePolicy",
          "Statement": [
            {
              "Sid": "Allow-SendMessage-To-Queue-From-SNS-Topic",
              "Effect": "Allow",
              "Principal": "*",
              "Action": [
                "sqs:SendMessage"
              ],
              "Resource": "*",
              "Condition": {
                "ArnEquals": {
                  "aws:SourceArn": {
                    "Ref": "ShakTopic"
                  }
                }
              }
            }
          ]
        }
      }
    }
  },
  "Outputs": {}
}
